@model IEnumerable<QuizApp.Models.QuizResult>

@{
    ViewBag.Title = "Quiz Results";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Results</title>
    <link href="~/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Quiz Results</h2>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">You scored @ViewBag.Score out of @ViewBag.TotalQuestions</h4>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Your Answer</th>
                            <th>Correct</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model)
                        {
                            <tr>
                                <td>@result.Question.Text</td>
                                <td>@result.Question.Options[result.UserAnswer]</td>
                                <td class="@(result.IsCorrect ? "text-success" : "text-danger")">
                                    @(result.IsCorrect ? "Correct" : "Incorrect")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <form asp-action="Restart" method="post">
                    <button type="submit" class="btn btn-primary">Restart Quiz</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
